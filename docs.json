{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Versus",
  "colors": {
    "primary": "#7C3AED",
    "light": "#A78BFA",
    "dark": "#5B21B6"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "icon": "rocket",
            "pages": [
              "index",
              "getting-started/create-account",
              "getting-started/connect-friends"
            ]
          },
          {
            "group": "About Versus",
            "icon": "circle-info",
            "pages": [
              "about/why-prediction-markets",
              "about/philosophy",
              "about/market-opportunity"
            ]
          },
          {
            "group": "Using Versus",
            "icon": "gamepad",
            "pages": [
              "using/portfolio-dashboard",
              "using/leaderboard",
              "using/live-feed",
              "using/friends-network",
              "using/prediction-markets"
            ]
          },
          {
            "group": "Terminal Features",
            "icon": "terminal",
            "pages": [
              "terminal/market-cards",
              "terminal/entering-prediction",
              "terminal/active-positions",
              "terminal/vs-friends-challenges"
            ]
          },
          {
            "group": "Key Concepts",
            "icon": "lightbulb",
            "pages": [
              "concepts/pnl-calculation",
              "concepts/odds-movement",
              "concepts/social-betting-layer",
              "concepts/ranking-algorithm"
            ]
          },
          {
            "group": "Applications",
            "icon": "grid-2",
            "pages": [
              "applications/competitive-social-trading",
              "applications/prediction-entertainment",
              "applications/community-leagues"
            ]
          },
          {
            "group": "Security & Trust",
            "icon": "shield-check",
            "pages": [
              "security/identity-profiles",
              "security/fair-play",
              "security/data-integrity"
            ]
          },
          {
            "group": "Resources",
            "icon": "books",
            "pages": [
              "resources/glossary",
              "resources/market-parameters",
              "resources/access-controls"
            ]
          }
        ]
      },
      {
        "tab": "Terms",
        "groups": [
          {
            "group": "Legal",
            "icon": "scale-balanced",
            "pages": [
              "terms/risk-disclosure",
              "terms/terms-conditions",
              "terms/privacy-policy",
              "terms/cookie-policy"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Community",
          "href": "https://discord.gg/versus",
          "icon": "discord"
        },
        {
          "anchor": "Updates",
          "href": "https://twitter.com/versus",
          "icon": "x-twitter"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@versus.gg"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Launch App",
      "href": "https://app.versus.gg"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/versus",
      "discord": "https://discord.gg/versus",
      "github": "https://github.com/versus"
    }
  },
  "modeToggle": {
    "default": "dark"
  },
  "rounded": "default",
  "search": {
    "prompt": "Search Versus docs..."
  },
  "seo": {
    "indexHiddenPages": false
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  }
}
